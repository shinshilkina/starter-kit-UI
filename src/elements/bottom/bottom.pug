
include ../subscription-text-field/subscription-text-field

mixin bottom({inputText = 'Your email address', copyrightText = 'Copyright Â© 2018 Toxin UI Kit. All rights reserved.'} = {})
    ul.bottom
        each item in locals.bottomData
            li(class="bottom__element")
                if item.id === undefined
                    include ../logo/logo
                if (item.title)
                    div(class="bottom__element__title")=item.title
                if item.elements
                    ul.bottom__element__sub-element
                        each item_child in item.elements
                            li(class="bottom__element__sub-element")
                                div(class="bottom__element__sub-element__body -"+item.id)=item_child.element
                            if item.id === 'subscribe'
                                +subscription-text-field('', inputText)
    div.bottom__down
        span.bottom__down__copyright=copyrightText
        div.bottom__down__links
            div.bottom__down__links--twitter
            div.bottom__down__links--facebook
            div.bottom__down__links--instagram
