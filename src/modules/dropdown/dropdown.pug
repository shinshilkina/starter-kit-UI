mixin dropdown({title, placeholder, options = [], buttons = false, group } = {})
    div.dropdown(data-group=group)
        div.dropdown-title=title
        input.dropdown__area(placeholder=placeholder)
        div.dropdown__select
        ul.dropdown__items
            each option in options
                li.dropdown__item
                    - const {text, count} = option
                    + dropdown-options({text, count} )
            if buttons
                div.dropdown__items__buttons
                    div.dropdown__items__buttons__clear(type="button")="очистить"
                    div.dropdown__items__buttons__save(type="button")="применить"

mixin dropdown-options({ text = 'параметр', count = 0 } = {})
    if number < 0
        - number = 0

    div.dropdown__item__title=text
    div.dropdown__item__buttons
        div.dropdown__item__buttons__minus(class="button-minus" type="button")="-"
        div.dropdown__item__buttons__count(class="str-count")=count
        div.dropdown__item__buttons__plus(class="button-plus" type="button")="+"