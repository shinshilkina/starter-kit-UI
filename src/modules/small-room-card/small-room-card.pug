include ../../elements/rate-button/rate-button
include ../../elements/image-slider/image-slider


mixin small-room-card({number = '888', category='люкс', cost='9990', currency= '₽', feedback = '145', rate = 5, buttons = false,images=[]} = {})
    form.room-card.room-card_small
        div.room-card_body
            +image-slider({buttons, images})
            div.room-card_small_body_info
                span.room-card_small_body_info_number.room_number_symbol='№ '
                span.room-card_small_body_info_number.room_number_count=`${number} `
                span.room-card_small_body_info_category.room_category=category
                span.room-card_small_body_info_cost.room_cost=`${cost}${currency} `
                span.room-card_small_body_info_day.room_day=' в сутки'
            div.room-card.room-card_small_body_reviews
                +rate-button(rate)
                span.room-card_small_body_reviews_feedback_count=`${feedback}`
                span.room-card_small_body_reviews_feedback_text=' Отзывов'
