mixin button-active($text)
    div.buttons_active=$text

mixin button-bordered($text)
    div.buttons_bordered
        div.buttons_bordered_body=$text

mixin icon-link-purple($text)
    div.buttons_icon-link_purple=$text

mixin icon-link-dark($text)
    div.buttons_icon-link_dark=$text

mixin button-go-topay($text)
    div.buttons_go-to=$text
        div.buttons_go-to_icon

mixin pagination($countPages, $countOnPage, $countVariants)
    div.pagination
        div.pagination_map
            div.pagination_map_page(class='active')='1'
            div.pagination_map_page='2'
            div.pagination_map_page='3'
            div.pagination_map_page='...'
            div.pagination_map_page=$countPages
            div.pagination_map_next
                div.pagination_map_next_arrow
        label.pagination_label='1 – '+$countOnPage+' из '+$countVariants+' вариантов аренды'


