include ../../elements/buttons/buttons
-
    var navigation = [
        {
            name: 'home',
            link: '#home',
            title: 'Home'
        },
        {
            name: 'about_us',
            link: '#about_us',
            title: 'About Us'
        },
        {
            name: 'services',
            link: '#services',
            title: 'Services',
            type: [
                {
                    name: 'documentation',
                    link: '#documentation',
                    title: 'Documentation'
                },
                {
                    name: 'community',
                    link: '#community',
                    title: 'Community'
                },
                {
                    name: 'get-in-touch',
                    link: '#get-in-touch',
                    title: 'Get in Touch'
                },
            ]
        },
        {
            name: 'careers',
            link: '#careers',
            title: 'Careers'
        },
        {
            name: 'news',
            link: '#news',
            title: 'News'
        },
        {
            name: 'documentation',
            link: '#documentation',
            title: 'Documentation'
        }
    ]

mixin header({name = ''} = {})
    nav.navigation
        div.navigation__logo
            include ../logo/logo
        ul.navigation__list
            each item in navigation
                li.navigation__element
                    a(href=item.link, class='navigation__link--'+item.name).navigation__link=item.title
                    if item.type
                        div.navigation__link__show-more
                            ul.navigation__sub
                                each item_sub in item.type
                                    li.navigation__sub-element
                                        a(href='#' + item_sub.name).navigation__sub-link=item_sub.title
            if (name !== '')
                li.navigation__element.navigation__element--name
                    a(class='navigation__link--name').navigation__link=name
            else
                +button-bordered({text: 'login', className: 'login-header'})
                +button-active({text: 'register', className: 'register-header'})

